{
  "name": "widya-wicara-skills-api",
  "version": "0.2.0",
  "description": "Skills Services for Widya Wicara Smart Speaker",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build:local": "rm -rf dist && tsc -p . && node dist/server.js",
    "build:prod": "sudo git pull && sudo rm -rf dist && tsc -p .",
    "build:docker": "rm -rf dist && tsc -p ."
  },
  "keywords": [],
  "author": "dennbagas@gmail.com",
  "license": "ISC",
  "dependencies": {
    "async": "^3.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "node-cron": "^2.0.3",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "xml2js": "^0.4.22"
  },
  "devDependencies": {
    "@types/async": "^3.0.2",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/node": "^12.7.8",
    "@types/node-cron": "^2.0.2",
    "@types/request": "^2.48.3",
    "@types/request-promise": "^4.1.44",
    "@types/xml2js": "^0.4.5",
    "husky": "^3.0.7",
    "lint-staged": "^9.4.1",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typescript": "^3.7.2"
  },
  "lint-staged": {
    "src/*.ts": [
      "prettier --write \"src/*.ts\"",
      "tslint -p tsconfig.json -c tslint.json",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
