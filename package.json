{
  "name": "widya-wicara-skills-api",
  "version": "1.1.0",
  "description": "Skills Services for Widya Wicara Smart Speaker",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "tsnd": "node_modules/.bin/ts-node-dev --respawn src/server.ts",
    "tsc": "node_modules/typescript/bin/tsc \"-p\" \".\"",
    "build:local": "rm -rf dist && tsc -p . && node dist/server.js",
    "build:prod": "sudo git pull && sudo rm -rf dist && tsc -p .",
    "build:docker": "rm -rf dist && tsc -p ."
  },
  "keywords": [],
  "author": "wibisana@widyawicara.com",
  "license": "ISC",
  "dependencies": {
    "apache-ignite-client": "^1.0.0",
    "async": "^3.1.0",
    "cheerio": "^1.0.0-rc.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^1.7.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "heart-ping": "^1.0.12",
    "moment": "^2.24.0",
    "node-cron": "^2.0.3",
    "pg": "^7.14.0",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "request-promise": "^4.2.5",
    "sentence-similarity": "^1.0.8",
    "sequelize": "^5.21.3",
    "sequelize-typescript": "^1.1.0",
    "xml2js": "^0.4.22"
  },
  "devDependencies": {
    "@types/async": "^3.0.3",
    "@types/cheerio": "^0.22.15",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/cron": "^1.7.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.2",
    "@types/node": "^12.12.18",
    "@types/node-cron": "^2.0.2",
    "@types/request": "^2.48.3",
    "@types/request-promise": "^4.1.45",
    "@types/xml2js": "^0.4.5",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.4",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  },
  "lint-staged": {
    "src/*.ts": [
      "prettier --write \"src/*.ts\"",
      "tslint -p tsconfig.json -c tslint.json",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
