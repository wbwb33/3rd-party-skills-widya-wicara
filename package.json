{
  "name": "widya-wicara-api",
  "version": "0.3.0",
  "description": "Backend Services for Widya Wicara Smart Speaker",
  "main": "server.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/server.ts",
    "build": "rd /s /q dist && tsc -p .",
    "build:docker": "rm -rf dist && tsc -p .",
    "deploy": "sudo git pull && sudo rm -rf dist && tsc -p . && sudo pm2 restart development",
    "launch": "sudo git pull && sudo rm -rf dist && tsc -p . && sudo pm2 restart production",
    "test-dev": "nodemon --watch . --ext ts --exec \"mocha -r ts-node/register src/test/*.test.ts\""
  },
  "keywords": [],
  "author": "dennbagas@gmail.com",
  "license": "ISC",
