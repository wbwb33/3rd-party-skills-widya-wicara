    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "typeorm": "^0.2.18",
    "xml2js": "^0.4.22"
  },
  "devDependencies": {
    "@types/async": "^3.0.1",
    "@types/bcrypt-nodejs": "0.0.30",
